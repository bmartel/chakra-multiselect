{
  "name": "chakra-multiselect",
  "version": "1.0.0",
  "description": "A Multiselect component using ChakraUI",
  "author": "bmartel",
  "license": "MIT",
  "repository": "bmartel/chakra-multiselect",
  "homepage": "http://bmartel.github.io/chakra-multiselect",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.tsx",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "microbundle --no-compress --format modern,cjs",
    "start": "microbundle watch --no-compress --format modern,cjs",
    "prepare": "run-s build",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint ./src --fix",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "docs:build": "typedoc",
    "rm:deploy": "rimraf example/build",
    "example:build": "cd example && yarn install && yarn run build",
    "predeploy": "run-s example:build docs:build",
    "deploy": "gh-pages -d example/build"
  },
  "dependencies": {
    "@chakra-ui/react": "^1.4.1",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "framer-motion": "^4",
    "react": "^17.0.2"
  },
  "peerDependencies": {
    "@chakra-ui/react": "^1.4.1",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "framer-motion": "^4",
    "react": "^17.0.2"
  },
  "devDependencies": {
    "@chakra-ui/theme-tools": "^1.1.1",
    "@chakra-ui/utils": "^1.4.0",
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.5",
    "@testing-library/user-event": "^13.0.16",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "babel-eslint": "^10.0.3",
    "cross-env": "^7.0.3",
    "downshift": "^6.1.1",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-config-standard-react": "^11.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-standard": "^4.1.0",
    "gh-pages": "^3.1.0",
    "microbundle": "^0.13.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "react-dom": "^17.0.2",
    "react-scripts": "^4.0.3",
    "rimraf": "^3.0.2",
    "rollup-plugin-typescript": "^1.0.1",
    "typedoc": "^0.20.34",
    "typescript": "^4.2.3"
  },
  "files": [
    "dist"
  ]
}
